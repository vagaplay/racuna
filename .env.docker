# BOLT Dashboard - Variáveis de Ambiente para Docker

# Backend Configuration
FLASK_ENV=production
FLASK_DEBUG=false
SECRET_KEY=bolt_dashboard_secret_key_production_2024

# Database Configuration (SQLite por padrão)
DATABASE_URL=sqlite:///data/bolt_dashboard.db

# Azure Configuration (será configurado via interface)
# AZURE_TENANT_ID=
# AZURE_CLIENT_ID=
# AZURE_CLIENT_SECRET=
# AZURE_SUBSCRIPTION_ID=

# CORS Configuration
CORS_ORIGINS=http://localhost,http://localhost:80,http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/bolt_dashboard.log

# Security
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Performance
WORKERS=4
TIMEOUT=30

# Optional: PostgreSQL (descomente para usar)
# DATABASE_URL=postgresql://bolt_user:bolt_password@database:5432/bolt_dashboard

# Optional: Redis (descomente para usar)
# REDIS_URL=redis://redis:6379/0

