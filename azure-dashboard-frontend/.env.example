# BOLT Dashboard - Frontend Configuration (Local Development)

# Backend API URL (local)
VITE_API_BASE_URL=http://localhost:5000

# Application Configuration
VITE_APP_NAME=BOLT Dashboard
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Sistema de Gerenciamento Azure

# Development Settings
VITE_ENV=development
VITE_DEBUG=true

# Azure Configuration
VITE_AZURE_TENANT_ID=
VITE_AZURE_CLIENT_ID=

# Features Flags
VITE_ENABLE_AZURE_AD=true
VITE_ENABLE_LOCAL_AUTH=true
VITE_ENABLE_DEBUG_PAGES=true

# UI Configuration
VITE_THEME=light
VITE_LANGUAGE=pt-BR

# Development Tools
VITE_SHOW_DEV_TOOLS=true
VITE_ENABLE_HOT_RELOAD=true

